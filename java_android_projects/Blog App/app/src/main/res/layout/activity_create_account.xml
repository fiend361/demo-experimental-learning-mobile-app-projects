<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:weightSum="8"
    tools:context=".Gui.CreateAccountActivity">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_img" />

    <EditText
        android:id="@+id/create_first_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:hint="First Name" />

    <EditText
        android:id="@+id/create_last_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:hint="Last Name" />

    <EditText
        android:id="@+id/create_email_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:hint="Email" />

    <EditText
        android:id="@+id/create_password_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/create_confirm_password_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_style"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <RadioGroup
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/APositive"
                android:text="A+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/ANegative"
                android:text="A-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <RadioGroup
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/BPositive"
                android:text="B+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/BNegative"
                android:text="B-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <RadioGroup
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/ABPositive"
                android:text="AB+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/ABNegative"
                android:text="AB-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/OPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O+" />

            <RadioButton
                android:onClick="onRadioButtonClicked"
                android:id="@+id/ONegative"
                android:text="O-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

    </RadioGroup>

    <Button
        android:id="@+id/create_acc_btn"
        style="@style/ButtonStyle"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:text="Create account" />

</LinearLayout>